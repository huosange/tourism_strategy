<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.androidkun.xtablayout.XTabLayout
        app:xTabBackgroundColor="#ffffff"
        android:background="#ffffff"
        app:xTabIndicatorColor="@color/status_bar_color"
        app:xTabIndicatorHeight="3dp"
        app:xTabIndicatorWidth="80dp"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xTabDisplayNum="2"
        app:xTabSelectedTextColor="#333333"
        app:xTabSelectedTextSize="18dp"
        app:xTabTextColor="#666666"
        app:xTabTextSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e2e2e2"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
